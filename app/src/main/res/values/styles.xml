<resources>
    <style name="CustomEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edittext_landing</item>
        <item name="android:textColorHint">#BC878181</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="CustomEditTextWhite" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edittext_landing_white</item>
        <item name="android:textColorHint">#BC878181</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="RoundedButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Tooltip">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#007F5F</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">2dp</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="SpinnerTooltip" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:textColor">#4CAF50</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CustomEditTextWhite_goal" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edittext_landing_white2</item>
        <item name="android:textColorHint">#BC878181</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

</resources>