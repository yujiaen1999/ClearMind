        <!--      QUESTION 1      -->
        <TextView
            android:id="@+id/introduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_internal"
            android:text="This Survey takes approximately 10 minutes to complete."
            android:textSize="@dimen/text_size_main_small"
            android:textStyle="bold" />

<!--        This Survey contains 68 questions in total, and it takes approximately 10 minutes to complete.-->

        <TextView
            android:id="@+id/question_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_internal"
            android:text="What's your age?"
            android:textSize="@dimen/text_size_main_small" />

        <EditText
            android:id="@+id/answer1"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingHorizontal="10dp"
            android:hint="age"
            android:inputType="textPersonName" />

        <!--      QUESTION 2      -->
        <TextView
            android:id="@+id/question_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_internal"
            android:text="What's your gender?"
            android:textSize="@dimen/text_size_main_small" />

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="20dp" >

            <RadioButton
                android:id="@+id/radiobtn_1"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Male" />
            <RadioButton
                android:id="@+id/radiobtn_2"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Female" />
            <RadioButton
                android:id="@+id/radiobtn_3"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Other" />
        </RadioGroup>


        <!--      QUESTION 3      -->
        <TextView
            android:id="@+id/question_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_internal"
            android:text="What's your major?"
            android:textSize="@dimen/text_size_main_small" />

        <EditText
            android:id="@+id/answer3"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingHorizontal="10dp"
            android:hint="major" />


        <!--      QUESTION 4      -->
        <TextView
            android:id="@+id/question_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_internal"
            android:text="Year at school? (Total number of years in Colleges/Universities after high school)"
            android:textSize="@dimen/text_size_main_small" />

        <RadioGroup
            android:id="@+id/radioGroup2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="45dp"
            android:paddingLeft="20dp"
            android:paddingRight="10dp" >

            <RadioButton
                android:id="@+id/radiobtn_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0-1 year" />

            <RadioButton
                android:id="@+id/radiobtn_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1-2 years" />

            <RadioButton
                android:id="@+id/radiobtn_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2-3 years" />

            <RadioButton
                android:id="@+id/radiobtn_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3-4 years" />

            <RadioButton
                android:id="@+id/radiobtn_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4+ years" />
        </RadioGroup>

