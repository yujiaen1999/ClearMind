<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_general">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2FFD8"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        tools:ignore="MissingConstraints"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="@dimen/text_internal"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/design_photoroom" />

            <TextView
                android:id="@+id/welcome_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ClearMind Sign up"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#5FB918" />

        </LinearLayout>


        <TextView
            android:id="@+id/question1"
            android:layout_width="305dp"
            android:layout_height="24dp"
            android:text="Question1: What's your username?"
            />

        <EditText
            android:id="@+id/answer1"
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Answer1"
            android:inputType="textMultiLine"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="106dp"
            tools:layout_editor_absoluteY="233dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.240" />

        <TextView
            android:id="@+id/question2"
            android:layout_width="305dp"
            android:layout_height="24dp"
            android:layout_marginTop="@dimen/text_internal"
            android:text="Question2: What's your name?"
            />

        <EditText
            android:id="@+id/answer2"
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Answer2"
            android:inputType="textMultiLine"
            tools:ignore="MissingConstraints"
            />

        <TextView
            android:id="@+id/question3"
            android:layout_width="305dp"
            android:layout_height="24dp"
            android:layout_marginTop="@dimen/text_internal"
            android:text="Question3: What's your email?"
            />

        <EditText
            android:id="@+id/answer3"
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Answer3"
            android:inputType="textMultiLine"
            />

        <TextView
            android:id="@+id/question4"
            android:layout_width="305dp"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/text_internal"
            android:text="Question4: What are you expecting to learn from this App?"
            />

        <EditText
            android:id="@+id/answer4"
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Answer4"
            android:inputType="textMultiLine" />

        <TextView
            android:id="@+id/question5"
            android:layout_width="305dp"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/text_internal"
            android:text="Question5: Have you practiced any mental health therapy techniques (like ACT or CBT) in the past? If yes please provide some details."
            />

        <EditText
            android:id="@+id/answer5"
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Answer5"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/submit_button"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_marginTop="@dimen/text_internal"
            android:layout_marginBottom="300dp"
            android:onClick="openMain"
            android:text="Submit"
            app:backgroundTint="#5FB918" />

    </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>