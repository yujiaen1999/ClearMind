    <TextView android:id="@+id/simpleTextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Learn Acceptance and commitment therapy for free!"
        android:textSize="20sp"
        android:textColor="#5FB918"
        android:textStyle="bold"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/simpleTextView"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="We provide on-demand help for overcoming the urge of procrastination. Please join us!"
        android:textColor="#5FB918"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="253dp"
        android:layout_height="207dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/simpleTextView"
        app:srcCompat="@drawable/design_photoroom" />

    <Button
        android:id="@+id/button"
        android:layout_width="245dp"
        android:layout_height="45dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="#5FB918"
        android:text=" Login >"
        android:onClick="openLoginActivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/button2"
        android:layout_width="245dp"
        android:layout_height="45dp"
        android:backgroundTint="#5FB918"
        android:layout_marginBottom="152dp"
        android:text="Register >"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />


</androidx.constraintlayout.widget.ConstraintLayout>