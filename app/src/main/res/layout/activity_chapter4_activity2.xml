            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/text_internal"
                android:text="Now it's time to set a goal that is specific, measurable, attainable, and relevant to overcome your urge to procrastinate for the upcoming week. While this framework can be applied to various aspects of your life, for now, let's concentrate on conquering procrastination.
"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="@dimen/text_size_main_large" />

            <EditText
                android:id="@+id/input1"
                style="@style/CustomEditTextWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="true"
                android:padding = "10dp"
                android:layout_marginBottom="@dimen/text_internal"
                android:hint="Specific:"
                android:inputType="textMultiLine" />

            <EditText
                android:id="@+id/input2"
                style="@style/CustomEditTextWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="true"
                android:padding = "10dp"
                android:layout_marginBottom="@dimen/text_internal"
                android:hint="Trackable:"
                android:inputType="textMultiLine" />

            <EditText
                android:id="@+id/input3"
                style="@style/CustomEditTextWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="true"
                android:padding = "10dp"
                android:layout_marginBottom="@dimen/text_internal"
