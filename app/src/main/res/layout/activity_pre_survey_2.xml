<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2FFD8">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="-165dp"
        app:layout_constraintBottom_toTopOf="@+id/button_previous" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_marginRight="@dimen/fab_margin">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="ClearMind Pre-Survey"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="@dimen/text_size_heading_small"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:progress="8"
                android:layout_width="300dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                tools:layout_editor_absoluteX="56dp"
                tools:layout_editor_absoluteY="16dp" />


            <TextView
                android:id="@+id/introduction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_internal"
                android:text="How much do you, yourself agree to the following statements? \n1 = Disagree; 5 = Agree"
                android:textSize="@dimen/text_size_main_small"
                android:textStyle="bold" />


            <!--      QUESTION 5      -->
            <TextView
                android:id="@+id/question_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_internal"
                android:text="1. I usually allocate time to review and proofread my work."
                android:textSize="@dimen/text_size_main_small" />

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <RadioButton
                    android:id="@+id/radiobtn_1"
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:text="1" />
                <RadioButton
                    android:id="@+id/radiobtn_2"
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:text="2" />
                <RadioButton
                    android:id="@+id/radiobtn_3"
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:text="3" />
                <RadioButton
                    android:id="@+id/radiobtn_4"
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:text="4" />
                <RadioButton
                    android:id="@+id/radiobtn_5"
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:text="5" />
            </RadioGroup>


            <!--      QUESTION 6      -->
            <TextView
                android:id="@+id/question_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_internal"
                android:text="2. I put off projects until the last minute."
                android:textSize="@dimen/text_size_main_small" />

            <RadioGroup
                android:id="@+id/radioGroup2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <RadioButton
                    android:id="@+id/radiobtn_6"
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:text="1" />
                <RadioButton
                    android:id="@+id/radiobtn_7"
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:text="2" />
                <RadioButton
                    android:id="@+id/radiobtn_8"
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:text="3" />
                <RadioButton
                    android:id="@+id/radiobtn_9"
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:text="4" />
                <RadioButton
                    android:id="@+id/radiobtn_10"
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:text="5" />
            </RadioGroup>


            <!--      QUESTION 7      -->
            <TextView
                android:id="@+id/question_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_internal"
                android:text="3. I have found myself waiting until the day before to start a big project."
                android:textSize="@dimen/text_size_main_small" />

            <RadioGroup
                android:id="@+id/radioGroup3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <RadioButton
                    android:id="@+id/radiobtn_11"
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:text="1" />
                <RadioButton
                    android:id="@+id/radiobtn_12"
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:text="2" />
                <RadioButton
                    android:id="@+id/radiobtn_13"
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:text="3" />
                <RadioButton
                    android:id="@+id/radiobtn_14"
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:text="4" />
                <RadioButton
                    android:id="@+id/radiobtn_15"
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:text="5" />
            </RadioGroup>


            <!--      QUESTION 8      -->
            <TextView
                android:id="@+id/question_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_internal"
                android:text="4. I know I should work on school work, but I just don't do it."
                android:textSize="@dimen/text_size_main_small" />

            <RadioGroup
                android:id="@+id/radioGroup4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <RadioButton
                    android:id="@+id/radiobtn_16"
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:text="1" />
                <RadioButton
                    android:id="@+id/radiobtn_17"
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:text="2" />
                <RadioButton
                    android:id="@+id/radiobtn_18"
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:text="3" />
                <RadioButton
                    android:id="@+id/radiobtn_19"
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:text="4" />
                <RadioButton
                    android:id="@+id/radiobtn_20"
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:text="5" />
            </RadioGroup>

            <!--      QUESTION 9      -->
            <TextView
                android:id="@+id/question_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_internal"
                android:text="5. When working on schoolwork, I usually get distracted by other things."
                android:textSize="@dimen/text_size_main_small" />

            <RadioGroup
                android:id="@+id/radioGroup5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginBottom="60dp">

                <RadioButton
                    android:id="@+id/radiobtn_21"
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:text="1" />
                <RadioButton
                    android:id="@+id/radiobtn_22"
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:text="2" />
                <RadioButton
                    android:id="@+id/radiobtn_23"
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:text="3" />
                <RadioButton
                    android:id="@+id/radiobtn_24"
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:text="4" />
                <RadioButton
                    android:id="@+id/radiobtn_25"
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:text="5" />
            </RadioGroup>


<!--            &lt;!&ndash;     Place holder   &ndash;&gt;-->
<!--            <TextView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:paddingLeft="20dp"-->
<!--                android:paddingTop="30dp"-->
<!--                android:paddingRight="20dp"-->
<!--                android:text=""-->
<!--                android:textSize="16dp" />-->


        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/button_previous"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_gravity="left"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button_next"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_gravity="right"
        app:backgroundTint="#54B263"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"/>


</androidx.constraintlayout.widget.ConstraintLayout>