                android:textSize="@dimen/text_size_main_small"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/introduction_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_internal"
                android:text="The survey will take approximately 10 minutes to complete."
                android:textSize="@dimen/text_size_main_small"
                android:textStyle="bold" />


            <Button
                android:id="@+id/button_confirm"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/text_internal"
                android:text="Start"
                app:backgroundTint="#54B263" />

