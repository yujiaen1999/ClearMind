<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_general">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2FFD8"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        tools:ignore="MissingConstraints"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="80dp"
            app:srcCompat="@drawable/design_photoroom" />

        <TextView
            android:id="@+id/welcome_title"
            android:layout_width="390dp"
            android:layout_height="48dp"
            android:text="ClearMind Sign up"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#5FB918" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="305dp"
            android:layout_height="24dp"
            android:text="Security Question1:" />

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="305dp"
            android:layout_height="28dp" />

        <EditText
            android:id="@+id/answer1"
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Answer1"
            android:inputType="textMultiLine"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/text2"
            android:layout_width="305dp"
            android:layout_height="24dp"
            android:text="Security Question2:" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="305dp"
            android:layout_height="28dp"
            />

        <EditText
            android:id="@+id/answer2"
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Answer2"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/submit_button"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:onClick="openMain"
            android:text="Next"
            app:backgroundTint="#5FB918"
            android:layout_marginTop="50dp"/>

    </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>